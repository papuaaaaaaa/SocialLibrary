- model_class = ProvidedBook
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @provided_book.title


= link_to t('.back', :default => t("helpers.links.back")), provided_books_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_provided_book_path(@provided_book), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), provided_book_path(@provided_book), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
